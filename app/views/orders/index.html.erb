<div class="container">
  <div class="my-4">
    <h2>注文履歴</h2>
  </div>

  <div class="row">
    <div class="col">
      <table class="table table-bordered table-hover">
        <thead>
          <tr class="table-active">
            <th>お届け日時</th>
            <th>お届け先</th>
            <th>お支払い金額</th>
            <th>注文詳細</th>
            <th>注文状況</th>
          </tr>
        </thead>
        <% @orders.each do |order| %>
        <tbody>
          <tr>
            <td><%= l order.delivery_day %></td>
            <td>〒<%= order.postal_code %><br><%= order.address %><br><%= order.name %></td>
            <td><%= order.total_payment.to_s(:delimited) %>円</td>
            <td class="text-center"><%= link_to "表示する", order_path(order), class:"btn btn-primary" %></td>
            <td><%= order.status_i18n %></td>
          </tr>
        </tbody>
        <% end %>

      </table>
    </div>
  </div>

</div>