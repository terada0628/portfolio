<div class="container">

  <div class="my-4">
    <h2>注文情報確認</h2>
  </div>

  <div class="row">

    <div class="col">
     <table class="table table-bordered">
       <thead>
         <tr>
           <th>商品名</th>
           <th>数量</th>
           <th>小計</th>
         </tr>
       </thead>
       <% @cart_items.each do |cart_item| %>
       <tbody>
         <tr>
           <td>
            <div class="d-flex">
              <div>
                <%= attachment_image_tag cart_item.item, :image, format:'jpeg', size:'150x100', class:"mr-2" %>
              </div>
              <div>
                <%= cart_item.item.name %><br>¥<%= cart_item.item.price.to_i.round %>
              </div>
            </div>
           </td>
           <td><%= cart_item.amount %></td>
           <td><%= cart_item.sub_total_price.to_s(:delimited) %></td>
         </tr>
       </tbody>
       <% end %>
     </table>
    </div>

  </div>

  <div class="row">

    <div class="col">
      <table class="table table-bordered">

        <tr>
          <th>支払い方法</th>
          <td><%= @order.payment_method %></td>
        </tr>

        <tr>
          <th>お届け先</th>
          <td>〒<%= @order.postal_code %> <%= @order.address %> <%= @order.name %></td>
        </tr>

        <tr>
          <th>お届け日時</th>
          <td><%= @order.delivery_day %> <%= @order.delivery_time %></td>
        </tr>

      </table>
    </div>

  </div>


  <div class="row">

    <div class="col-7 col-sm-8 col-md-9">
      <table class="table table-bordered">

        <tr>
          <th>送料</th>
          <td><%= @ship_cost %></td>
        </tr>

        <tr>
          <th>商品合計</th>
          <td><%= @total_price.to_s(:delimited) %></td>
        </tr>

        <tr>
          <th>請求金額</th>
          <td><%= @total_payment.to_s(:delimited) %></td>
        </tr>

      </table>
    </div>

    <div class="col-5 col-sm-4 col-md-3 text-center d-flex align-items-center">
      <%= link_to "注文を確定", orders_path, method: :post, class:"btn btn-success" %>
    </div>
  </div>

</div>