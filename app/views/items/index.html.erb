<div class="container">
  <div class="my-4">
    <h2>商品一覧</h2>
  </div>
  <div class="row">

    <!--ジャンル・ランキング-->
    <%= render 'items/sidebar', genres:@genres, all_ranks:@all_ranks %>

    <div class="col-9 col-lg-10 d-flex flex-wrap">

      <% @items.each do |item| %>
        <div class="flex-item mr-2">
          <%= link_to item_path(item) do %>
            <%= attachment_image_tag item, :image, format: 'jpeg', size:'240x160', class:"border" %>
            <h5 class="item"><%= item.name %><br>￥<%= item.price %></h5>
          <% end %>
        </div>
      <% end %>

    </div>
  </div>

  <div class="row mt-3">
    <div class="col-4 mx-auto"><%= paginate @items %></div>
  </div>

</div>