<div class="container">
  <div class="my-4">
    <h2><%= @genre.name %></h2>
  </div>

  <div class="row">

    <div class="col-3 col-lg-2">
      <div class="genre">
        <br><br><strong>ジャンル検索</strong>
        <ul class="list-group">
          <% @genres.each do |genre| %>
          <li><%= link_to genre.name, items_path(genre.items) %></li>
          <% end %>
        </ul>
      </div>
      <br>
      <div class="popular">
        <strong>人気ランキング</strong>
        <ol class="list-group">
          <% @favorite_item.each do |item| %>
          <li><%= link_to item.name, item_path(item) %></li>
          <% end %>
        </ol>
      </div>
    </div>

    <div class="col-9 col-lg-10 d-flex flex-wrap">

      <% @items.each do |item| %>
        <div class="flex-item mr-2">
          <%= link_to item_path(item) do %>
            <%= attachment_image_tag item, :image, format: 'jpeg', size:'240x160' %>
            <p><%= item.name %><br>¥<%= item.price %></p>
          <% end %>
        </div>
      <% end %>

    </div>
  </div>
</div>