<div class="container">
  <div class="my-4">
    <h2>ログイン</h2>
    <p class="text-right"><a href="/customers/sign_up">新規登録はこちら</a></p>
  </div>

  <div class="row-8 off-set-4">

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :"メールアドレス" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <br><%= f.label :"パスワード" %><br />
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :"ログイン情報を保持しますか？" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class:"btn btn-primary" %>
    </div>
    <% end %>
  </div>

</div>

