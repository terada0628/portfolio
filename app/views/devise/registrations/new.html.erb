<div class="container">
  <div class="my-4">
    <h2>新規会員登録</h2>
    <p class="text-right"><a href="/customers/sign_in">ログインはこちら</a></p>
  </div>

  <div class="row-8 off-set-4">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :"名前(姓)" %><br />
        <%= f.text_field :family_name, autofocus: true, placeholder: "山田", class: "form-control" %>
      </div><br>

      <div class="field">
        <%= f.label :"名前(名)" %><br />
        <%= f.text_field :first_name, autofocus: true, placeholder: "太郎", class: "form-control" %>
      </div><br>

      <div class="field">
        <%= f.label :"フリガナ(姓)" %><br />
        <%= f.text_field :family_name_kana, autofocus: true, placeholder: "ヤマダ", class: "form-control" %>
      </div><br>

      <div class="field">
        <%= f.label :"フリガナ(名)" %><br />
        <%= f.text_field :first_name_kana, autofocus: true, placeholder: "タロウ", class: "form-control" %>
      </div><br>

      <div class="field">
        <%= f.label :"性別" %><br />
        <%= f.radio_button :sex,"男性" %><label>男性</label>
        <%= f.radio_button :sex,"女性" %><label>女性</label>
      </div><br>

      <div class="field">
        <%= f.label :"メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, placeholder: "aws@gmail.com" %>
      </div><br>

      <div class="field">
        <%= f.label :"郵便番号(ハイフンなし)" %><br />
        <%= f.text_field :postal_code, class: "form-control", placeholder: "3338888" %>
      </div><br>

      <div class="field">
        <%= f.label :"住所" %><br />
        <%= f.text_field :address, class: "form-control", placeholder: "東京都新宿区" %>
      </div><br>

      <div class="field">
        <%= f.label :"電話番号(ハイフンなし)" %><br />
        <%= f.text_field :telephone_number, class: "form-control", placeholder: "11188883333" %>
      </div><br>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div><br>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div><br>

      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>
    <% end %>
  </div>

</div>
