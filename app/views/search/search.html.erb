  <div class="container">
  <div class="my-4">
    <% if @datas.empty? %>
      <h4>該当する商品はありません</h4>
    <% else %>
    <h4>検索結果(<%= @datas.count %>件)</h4>
    <% end %>
  </div>
  <div class="row">

    <div class="col-3 col-lg-2">
      <div class="genre">
        <br><br><strong>ジャンル検索</strong>
        <ul class="list-group">
          <% @genres.each do |genre| %>
          <li><%= link_to genre.name, search_search_path('search[value]': genre.id, 'search[how]': "match") %></li>
          <% end %>
        </ul>
      </div>
      <br>
      <div class="popular">
        <strong>人気ランキング</strong>
        <ol class="list-group">
          <% @favorite_item.each do |item| %>
          <li><%= link_to item.name, item_path(item) %></li>
          <% end %>
        </ol>
      </div>
    </div>

    <div class="col-9 col-lg-10 d-flex flex-wrap">

      <% @datas.each do |data| %>
        <div class="flex-item mr-2">
          <%= link_to item_path(data.id) do %>
            <%= attachment_image_tag data, :image, format: 'jpeg', size:'240x160',class:"img_hover" %>
            <p><%= data.name %><br>¥<%= data.price %></p>
          <% end %>
        </div>
      <% end %>

    </div>
  </div>
</div>