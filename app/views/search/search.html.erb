  <div class="container">
  <div class="my-4">
    <% if @datas.empty? %>
      <h4>該当する商品はありません</h4>
    <% else %>
    <h2>検索結果(<%= @datas.count %>件)</h2>
    <% end %>
  </div>
  <div class="row">

    <!--ジャンル・ランキング-->
    <%= render 'items/sidebar', genres:@genres, all_ranks:@all_ranks %>

    <div class="col-9 col-lg-10 d-flex flex-wrap">

      <% @datas.each do |data| %>
        <div class="flex-item mr-2">
          <%= link_to item_path(data.id) do %>
            <%= attachment_image_tag data, :image, format: 'jpeg', size:'240x160',class:"border" %>
            <p class="item"><%= data.name %><br>¥<%= data.price %></p>
          <% end %>
        </div>
      <% end %>

    </div>
  </div>

  <div class="row mt-3">
    <div class="col-4 mx-auto"><%= paginate @datas %></div>
  </div>

</div>