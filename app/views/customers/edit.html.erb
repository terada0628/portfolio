<div class="container">

  <div class="my-4">
    <h2>会員情報編集</h2>
  </div>

  <div class="row-8 off-set-4">

    <%= form_with model:@customer, url:customers_path, local: true do |f| %>
      <table class = "table table-borderless">
        <tr>
          <th></th>
          <th></th>
        </tr>

        <tr>
          <td>氏名</td>
          <td>
            <%= f.text_field :family_name, autofocus: true, placeholder: "名字" %>
            <%= f.text_field :first_name, placeholder: "名前" %>
          </td>
        </tr>

        <tr>
          <td>フリガナ</td>
          <td>
           <%= f.text_field :family_name_kana %>
           <%= f.text_field :first_name_kana %>
          </td>
        </tr>

        <tr>
          <td>性別</td>
          <td>
            <%= f.radio_button :sex,"男性" %><label>男性</label> <%= f.radio_button :sex,"女性" %><label>女性</label>
          </td>
        </tr>

        <tr>
          <td>郵便番号</td>
          <td><%= f.text_field :postal_code %></td>
        </tr>

        <tr>
          <td>住所</td>
          <td><%= f.text_field :address %></td>
        </tr>

        <tr>
          <td>電話番号</td>
          <td><%= f.text_field :telephone_number %></td>
        </tr>

        <tr>
          <td>メールアドレス</td>
          <td><%= f.text_field :email %></td>
         </tr>

         <tr>
          <td>
            <%= f.submit "変更を保存", class:"btn btn-success" %>
          </td>
          <td>
            <%= link_to "退会する",unsubscribe_path, class:"btn btn-danger" %>
          </td>
         </tr>
      </table>
    <% end %>

  </div>

</div>
