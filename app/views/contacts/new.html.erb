<div class="container">
  <div class="my-4">
    <h2>お問い合わせフォーム</h2>
  </div>

  <div class="row">
    <div class="col-12">
      <%= form_with model: @contact, url: contacts_path, method: :post, local: true do |f| %>
        <h5>種類</h5>
        <div class="form-check">
          <%= f.radio_button :type, 0, checked: true %> <label>商品やお店についてのお問い合わせ</label><br>
        </div>
        <div class="form-check">
          <%= f.radio_button :type, 1 %> <label>その他のお問い合わせ</label>
        </div>

        <br><h5>件名</h5>
        <div>
          <%= f.text_field :title, class:"form-control" %>
        </div>

        <br><h5>お問い合わせ内容</h5>
        <div class="mb-5">
          <%= f.text_area :content, class:"form-control" %>
        </div>

        <br><h4>お客様情報</h4>
        <table class="table table-borderless mt-3">
          <tr>
            <td></td>
            <td>(姓)</td>
            <td>(名)</td>
          </tr>

          <tr>
            <td>氏名</td>
            <td><%= f.text_field :family_name, autofocus: true, class:"form-control" %></td>
            <td><%= f.text_field :first_name, class:"form-control" %></td>
          </tr>

          <tr>
            <td>フリガナ</td>
            <td><%= f.text_field :family_name_kana, class:"form-control" %></td>
            <td><%= f.text_field :first_name_kana, class:"form-control" %></td>
          </tr>

          <tr>
            <td>性別</td>
            <td><%= f.radio_button :sex, 0, checked: true %><label>男性</label></td>
            <td><%= f.radio_button :sex, 1 %><label>女性</label> </td>
          </tr>
        </table>

        <table class="table table-borderless">
          <tr>
            <td>メールアドレス</td>
            <td><%= f.text_field :email, class:"form-control" %></td>
          </tr>

          <tr>
            <td>郵便番号</td>
            <td><%= f.text_field :postal_code, class:"form-control" %></td>
          </tr>

          <tr>
            <td>住所</td>
            <td><%= f.text_area :address, class:"form-control" %></td>
          </tr>

          <tr>
            <td>電話番号</td>
            <td><%= f.text_field :telephone_number, class:"form-control" %></td>
          </tr>

        </table>

        <div class="text-right my-4">
          <%= f.submit "送信する", class:"btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>